<?xml version="1.0" encoding="UTF-8"?>

<ptestplan>
	<name>sample test plan name</name>
	<description>sample description</description>
	<creationDate>2011-12-20</creationDate>
	<createdBy>mnxfst</createdBy>
	<initActivity>randomCtxValGen</initActivity>
	
	<globalConfiguration>

		<configuration name="rndCtxValGenCfg">
			<generate.variable.arg0>integer</generate.variable.arg0>
			<generate.variable.arg1>string</generate.variable.arg1>
			<generate.variable.arg2>boolean</generate.variable.arg2>
			<generate.variable.arg3>date</generate.variable.arg3>
		</configuration>
	
	</globalConfiguration>
	
	<activities>
	
		<!-- random value generator activity -->
		<activity id="randomCtxValueGenerator" name="randomCtxValGen" useGlobalConfig="rndCtxValGenCfg">
			<description>Generate random variable values and store them under the given variable</description>
			<class>com.mnxfst.testing.activities.context.RandomCtxVarGenActivity</class>
			<nextActivity>initTimestamp</nextActivity>
		</activity>			
		
		<!-- set init timestamp -->
		<activity id="timestamp" name="initTimestamp">
			<description>Sets an initial timestamp stored under the given variable</description>
			<class>com.mnxfst.testing.activities.timer.TimestampActivity</class>
			<contextVariable>initTimestamp</contextVariable>			
			<nextActivity>waitTimer</nextActivity>
		</activity>
		
		<!-- wait timer -->
		<activity id="waitTimer" name="waitTimer">
			<description>Simple wait timer which halts the plan execution for a configured time</description>
			<class>com.mnxfst.testing.activities.timer.WaitTimerActivity</class>
			<contextVariable>waitTime</contextVariable>
			<nextActivity>finalTimestamp</nextActivity>
			<configuration>
				<waitTime>20</waitTime>
			</configuration>
		</activity>
		
		<!-- set end timestamp -->
		<activity id="timestamp" name="finalTimestamp">
			<description>Sets an initial timestamp stored under the given variable</description>
			<class>com.mnxfst.testing.activities.timer.TimestampActivity</class>
			<contextVariable>finalTimestamp</contextVariable>			
			<nextActivity>simpleDurationLogger</nextActivity>
		</activity>

		<activity id="simpleDurationLogger" name="simpleDurationLogger">
			<description>Write out context</description>
			<class>com.mnxfst.testing.activities.timer.SimpleDurationLoggerActivity</class>
			<configuration>
				<startTimestampVariable>initTimestamp</startTimestampVariable>
				<endTimestampVariable>finalTimestamp</endTimestampVariable>
			</configuration>
			<contextVariable>sampleTestplanExecutionDuration</contextVariable>
			<nextActivity>finish</nextActivity>
		</activity>		

	</activities>		
	<fuck></fuck>
</ptestplan>
